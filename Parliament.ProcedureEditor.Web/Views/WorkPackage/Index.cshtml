@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <h2>Work packages</h2>
        <a href="/WorkPackage/Add" class="btn btn-outline-primary btn-sm">Add work package</a>
    </div>
</section>

<section>
    <div class="container">
        <h5 class="text-danger" data-bind="visible: isNotValidResponse" style="display:none">Something went wrong. Please contact support.</h5>
        <ul class="list-group list-group-flush" data-bind="visible:workPackageables().length>0, foreach: workPackageables">
            <li class="list-group-item">
                <work-package-list-item params="workPackageable: $data"></work-package-list-item>
                <a class="btn btn-outline-primary btn-sm" data-bind="attr: {href: window.urls.showWorkPackage.replace('{id}',Id)}">Select</a>
                <button type="button" class="btn btn-outline-secondary btn-sm" data-bind="click: $parent.showDeletePopup">Delete</button>
            </li>
        </ul>
    </div>
</section>

<popup params="popupText:warningText, isPopupVisible:isDeletePopupVisible, action:deleteWorkPackageable, actionText: 'Delete'"></popup>

@section scripts{
    <script data-main="/Scripts/Views/workpackagelist.js" src="~/Scripts/require.js"></script>
}
