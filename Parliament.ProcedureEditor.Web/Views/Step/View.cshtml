@model int

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input id="stepId" type="hidden" value="@Model" />
<section>
    <div class="container">
        <h2>Name: <span data-bind="text: step().ProcedureStepName"></span></h2>
        <h3>Id: <span data-bind="text: step().TripleStoreId"></span></h3>
        <a href="/step/Edit/@Model" class="btn btn-outline-primary btn-sm">Edit</a>
    </div>
</section>

<section>
    <div class="container">
        <h4>Business items</h4>
        <ul class="list-group list-group-flush" data-bind="visible:businessItems().length>0, foreach: businessItems">
            <li class="list-group-item">
                <business-item-list-item params="businessItem: $data"></business-item-list-item>
                <a class="btn btn-outline-primary btn-sm" data-bind="attr: {href: window.urls.showBusinessItem.replace('{id}',Id)}">Select</a>
            </li>
        </ul>
    </div>
</section>

<section>
    <div class="container">
        <h4>Routes</h4>
        <ul class="list-group list-group-flush" data-bind="visible:routes().length>0, foreach: routes">
            <li class="list-group-item">
                <route-list-item params="route: $data"></route-list-item>
                <a class="btn btn-outline-primary btn-sm" data-bind="attr: {href: window.urls.showRoute.replace('{id}',Id)}">Select</a>
            </li>
        </ul>
    </div>
</section>

@section scripts{
<script data-main="/Scripts/Views/stepview.js" src="~/Scripts/require.js"></script>
}
