<div class="form-row">
    <div class="form-group col-md-1">
        <small>Day</small>
        <input type="number" class="form-control" data-bind="textInput: day" />
    </div>
    <div class="form-group col-md-1">
        <small>Month</small>
        <input type="number" class="form-control" data-bind="textInput: month" />
    </div>
    <div class="form-group col-md-2">
        <small>Year</small>
        <input type="number" class="form-control" data-bind="textInput: year" />
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-4">
        <input type="date" class="form-control" data-bind="textInput: dateInput" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" />
    </div>
</div>