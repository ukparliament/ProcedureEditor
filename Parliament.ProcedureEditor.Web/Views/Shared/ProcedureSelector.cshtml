<div class="input-group" data-bind="visible: procedureId()!==null">
    <span class="form-control" data-bind="text: procedureName"></span>
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" data-bind="click: removeProcedure">Remove</button>
    </div>
</div>
<input class="form-control" data-bind="visible: procedureId()===null, textInput: searchProcedureText" />
<ul class="list-group list-group-flush" data-bind="visible:filteredProcedures().length>0, foreach: filteredProcedures">
    <li class="list-group-item">
        <span data-bind="text: ProcedureName"></span>
        <button type="button" class="btn btn-outline-primary" data-bind="click: $parent.selectProcedure">Select</button>
    </li>
</ul>