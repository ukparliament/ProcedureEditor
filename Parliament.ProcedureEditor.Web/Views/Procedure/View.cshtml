@model int

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input id="procedureId" type="hidden" value="@Model" />
<section>
    <div class="container">
        <h2>Procedure: <span data-bind="text: procedure().ProcedureName"></span></h2>
        <h3>Id: <span data-bind="text: procedure().TripleStoreId"></span></h3>
        <a href="/Procedure/Edit/@Model" class="btn btn-outline-primary btn-sm">Edit</a>
    </div>
</section>

<section>
    <div class="container">
        <h4>Work packages</h4>
        <ul class="list-group list-group-flush" data-bind="visible:workPackageables().length>0, foreach: workPackageables">
            <li class="list-group-item">
                <a data-bind="attr: {href: window.urls.showWorkPackage.replace('{id}',Id)}">
                    <h5 data-bind="text: ProcedureWorkPackageableThingName"></h5>
                    <h6>Date of the most recent business item: <span data-bind="text:isNaN(Date.parse(MostRecentBusinessItemDate))?'N/A':new Date(MostRecentBusinessItemDate).toLocaleDateString('en-GB')"></span></h6>
                </a>
            </li>
        </ul>
    </div>
</section>

<section>
    <div class="container">
        <h4>Routes</h4>
        <ul class="list-group list-group-flush" data-bind="visible:routes().length>0, foreach: routes">
            <li class="list-group-item">
                <a data-bind="attr: {href: window.urls.showRoute.replace('{id}',Id)}">
                    <h5><span data-bind="text:ProcedureRouteTypeName"></span> route from <span data-bind="text:FromProcedureStepName"></span> to <span data-bind="text:ToProcedureStepName"></span></h5>
                </a>
            </li>
        </ul>
    </div>
</section>

@section scripts{
    <script src="~/Scripts/Views/procedureview.js"></script>
}
